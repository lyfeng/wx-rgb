.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

.header {
  text-align: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.image-preview {
  position: relative;
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
  border: 1px solid #eee;
  border-radius: 8rpx;
  overflow: hidden;
}

.image-preview image {
  width: 100%;
  height: 100%;
  transition: transform 0.3s ease;
}

.placeholder {
  color: #999;
  font-size: 28rpx;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.btn {
  width: 48%;
  background-color: #4a90e2;
  color: white;
  font-size: 28rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 0;
  color: #333;
}

.color-results {
  margin-bottom: 40rpx;
}

.colors-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.color-item {
  display: flex;
  align-items: center;
  background-color: white;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.color-block {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  border: 1rpx solid #eee;
}

.color-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.color-hex, .color-rgb {
  font-size: 28rpx;
  padding: 10rpx 0;
  color: #333;
}

.premium-features {
  margin-bottom: 40rpx;
}

.premium-btn {
  margin: 20rpx 0;
  background-color: #f0f0f0;
  color: #333;
  font-size: 28rpx;
}

.ad-container {
  width: 100%;
  height: 150rpx;
  margin-top: auto;
}

.selection-box {
  position: absolute;
  border: 3px solid #ff0000;
  background-color: rgba(255, 0, 0, 0.2);
  pointer-events: none;
  z-index: 100;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
}

.selection-tip {
  margin: 10px 0;
  color: #666;
  font-size: 14px;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  padding: 10rpx;
  border-radius: 8rpx;
}

.mode-switch {
  color: #4a90e2;
  margin-top: 5px;
  font-size: 12px;
  padding: 5rpx 10rpx;
  background-color: #e6f0ff;
  border-radius: 4rpx;
}

.selected-color {
  margin-top: 20px;
  padding: 10px;
  background-color: #f8f8f8;
  border-radius: 8px;
}

.color-name {
  font-size: 12px;
  color: #666;
  margin-top: 2px;
}

/* 颜色显示区域样式 */
.color-display {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  padding: 10rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.color-box {
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #ddd;
  margin-right: 10rpx;
}

.color-text {
  font-size: 28rpx;
}

/* 优化框选颜色显示区域样式 */
.selection-colors {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.selection-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #333;
}

.color-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.selection-color-item {
  display: flex;
  align-items: center;
  background-color: white;
  padding: 15rpx;
  border-radius: 8rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.05);
}

.color-rank {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #4a90e2;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.color-box {
  width: 60rpx;
  height: 60rpx;
  border: 1px solid #ddd;
  margin-right: 15rpx;
  border-radius: 6rpx;
}

.color-text {
  font-size: 28rpx;
  color: #333;
}

/* 放大缩小控制按钮样式 */
.zoom-controls {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  display: flex;
  flex-direction: column;
  z-index: 10;
}

.zoom-btn {
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

.zoom-btn:active {
  background-color: rgba(0, 0, 0, 0.7);
}

/* 添加颜色百分比的样式 */
.color-percentage {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
} 